                .modal-body
                    form
                        .form-group
                            input#formGroupExampleInput.form-control.form-item(type='text', placeholder='Add the title')
                        .input-group.mb-3
                            .input-group-prepend
                                .input-group-text
                                    input(type='checkbox')
                            textarea.form-control.form-item(aria-label='With textarea', placeholder='Add item text')
                        .input-group.mb-3
